<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/recommend_root">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Recommend Box"
            android:id="@+id/textView5"
            android:layout_gravity="left" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Apakah anda memiliki institusi atau layanan tempat les dan kursus? Atau anda kenal dan ingin merekomendasikan tempat les dan kursus? Isi form singkat dibawah ini"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="30dp"
        android:id="@+id/textView30"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Nama Lembaga/Tempat Kursus"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:ems="10"
        android:id="@+id/nama_lembaga" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Kontak yang bisa dihubungi"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:ems="10"
        android:id="@+id/kontak_lembaga" />

</LinearLayout>